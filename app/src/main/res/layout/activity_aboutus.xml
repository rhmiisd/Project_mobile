<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/toolbarHeader"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/header"
        android:elevation="5dp" />

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="448dp"
        android:layout_below="@+id/tbProfile"
        android:gravity="center"
        android:layout_marginStart="13dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="350dp"
            android:layout_height="442dp"
            android:layout_margin="12dp"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="3dp"
            app:strokeColor="@color/blok"
            app:strokeWidth="2dp">

                <TextView
                    android:id="@+id/txt6"
                    android:layout_width="238dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="64dp"
                    android:layout_marginTop="17dp"
                    android:fontFamily="@font/poetsen_one"
                    android:gravity="center"
                    android:text="ABOUT US"
                    android:textColor="@android:color/black"
                    android:textSize="45sp" />

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idSewa"
                android:layout_marginHorizontal="55dp"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/poetsen_one"
                android:text="Nama Aplikasi: SEKOLAHKU"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtp2"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idSewa"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="135dp"
                android:fontFamily="@font/poetsen_one"
                android:text="SEKOLAHKU dapat memberikan informasi detail mengenai SMK yang akan dituju."
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtp3"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idSewa"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="215dp"
                android:fontFamily="@font/poetsen_one"
                android:text="SEKOLAHKU juga dapat memberikan informasi detail mengenai beberapa jurusan yang tersedia diberbagai sekolah "
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtp4"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idUser"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="318dp"
                android:fontFamily="@font/poetsen_one"
                android:text="@string/text4"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/txtp5"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idSewa"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="415dp"
                android:fontFamily="@font/poetsen_one"
                android:text="@string/pengenal"
                android:textAlignment="center"
                android:textSize="14sp" />
        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarHeaderdown"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/headerbawah"
        android:elevation="5dp"
        android:fitsSystemWindows="true" />

</LinearLayout>