<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".masuk_activity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/toolbarHeader"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/header"
        android:elevation="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="35dp"
        android:background="@color/gray"
        tools:layout_editor_absoluteX="0dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:background="@color/gray"
            app:cardElevation="3dp"
            app:cardCornerRadius="45dp"
            app:strokeColor="@color/blok"
            app:strokeWidth="2.5sp">

            <TextView
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/arbutus"
                android:text="KONNICHIWA GAES!"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginStart="9dp"
                android:textAlignment="center"
                android:textSize="25dp"
                android:textStyle="bold"
                />

            <ImageView
                android:layout_width="195dp"
                android:layout_height="180dp"
                android:layout_marginTop="80dp"
                android:layout_marginStart="89dp"
                android:src="@drawable/skull1" />

            <Button
                android:id="@+id/btn_firstlogin"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_marginTop="98dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="LOGIN"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_firstregister"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_marginTop="160dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="REGISTER"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarHeaderdown"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/headerbawah"
        android:elevation="5dp"
        android:fitsSystemWindows="true" />

</LinearLayout>